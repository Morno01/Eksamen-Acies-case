@{
    ViewData["Title"] = "Serier";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white"><i class="fas fa-layer-group"></i> Serier Oversigt</h1>
        <p class="text-white">Se elementer grupperet efter produktions serier</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-list"></i> Alle Serier</h4>
                <button class="btn btn-sm btn-outline-light" onclick="loadSerier()">
                    <i class="fas fa-sync"></i> Opdater
                </button>
            </div>
            <div class="card-body">
                <div id="loading" class="loading">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Indlæser serier...</p>
                </div>
                <div id="serierContainer"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = window.location.origin;

        // Hent alle elementer og grupper efter serie
        async function loadSerier() {
            const loading = document.getElementById('loading');
            const container = document.getElementById('serierContainer');

            loading.style.display = 'block';

            try {
                const response = await fetch(`${API_BASE}/api/elementer`);
                const elementer = await response.json();

                if (elementer.length === 0) {
                    container.innerHTML = '<div class="alert alert-info">Ingen elementer oprettet endnu</div>';
                    return;
                }

                // Grupper elementer efter serie
                const serierMap = {};
                elementer.forEach(el => {
                    const serie = el.serie || 'Ingen Serie';
                    if (!serierMap[serie]) {
                        serierMap[serie] = [];
                    }
                    serierMap[serie].push(el);
                });

                // Sorter serier alfabetisk
                const serieNavne = Object.keys(serierMap).sort();

                let html = '';
                serieNavne.forEach(serieNavn => {
                    const serieElementer = serierMap[serieNavn];
                    const antalElementer = serieElementer.length;
                    const samletVaegt = serieElementer.reduce((sum, el) => sum + el.vaegt, 0).toFixed(1);

                    // Beregn totale dimensioner
                    const typeCount = {};
                    serieElementer.forEach(el => {
                        const type = el.type || 'Ukendt';
                        typeCount[type] = (typeCount[type] || 0) + 1;
                    });

                    html += `
                        <div class="card mb-3 border-primary">
                            <div class="card-header" style="background: linear-gradient(135deg, #3498db, #2980b9); color: white;">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="mb-0">
                                            <i class="fas fa-layer-group"></i> Serie: <strong>${serieNavn}</strong>
                                        </h5>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <span class="badge bg-light text-dark">${antalElementer} element(er)</span>
                                        <span class="badge bg-light text-dark">${samletVaegt} kg total</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>Fordeling:</strong>
                                    ${Object.keys(typeCount).map(type =>
                                        `<span class="badge bg-info ms-1">${type}: ${typeCount[type]}</span>`
                                    ).join('')}
                                </div>
                                <div class="row">
                    `;

                    serieElementer.forEach(el => {
                        html += `
                            <div class="col-md-6 col-lg-4 mb-2">
                                <div class="element-box">
                                    <h6 class="mb-1">
                                        <i class="fas fa-cube text-success"></i>
                                        ${el.reference || 'Element #' + el.id}
                                    </h6>
                                    <small class="text-muted">
                                        ${el.type ? el.type : 'Ingen type'} |
                                        ${el.hoejde}×${el.bredde}×${el.dybde} mm |
                                        ${el.vaegt} kg
                                    </small>
                                    ${el.erSpecialelement ? '<br><span class="badge bg-warning">Special</span>' : ''}
                                    ${el.erGeometrielement ? '<br><span class="badge bg-danger">Geometri</span>' : ''}
                                </div>
                            </div>
                        `;
                    });

                    html += `
                                </div>
                            </div>
                        </div>
                    `;
                });

                container.innerHTML = html;

            } catch (error) {
                container.innerHTML = `<div class="alert alert-danger">Fejl: ${error.message}</div>`;
            } finally {
                loading.style.display = 'none';
            }
        }

        // Load serier når siden er klar
        document.addEventListener('DOMContentLoaded', loadSerier);
    </script>
}
