@{
    ViewData["Title"] = "Palleoptimering";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white"><i class="fas fa-magic"></i> Palleoptimering</h1>
        <p class="text-white">Generer optimal pakkeplan for dine elementer</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-cog"></i> Konfiguration</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Ordre Reference</label>
                    <input type="text" class="form-control" id="ordreReference" placeholder="ORD-2024-001">
                </div>
                <div class="mb-3">
                    <label class="form-label">Vælg Elementer</label>
                    <div id="elementSelect" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                        <p class="text-muted">Indlæser elementer...</p>
                    </div>
                </div>
                <button class="btn btn-primary w-100" onclick="genererPakkeplan()" id="genererBtn">
                    <i class="fas fa-magic"></i> Generer Pakkeplan
                </button>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-chart-bar"></i> Resultat</h4>
            </div>
            <div class="card-body">
                <div id="loading" class="loading">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Genererer pakkeplan...</p>
                </div>
                <div id="resultatContainer">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-boxes fa-4x mb-3"></i>
                        <p>Vælg elementer og klik "Generer Pakkeplan" for at starte</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 3D Visualization Modal -->
<div class="modal fade" id="modal3D" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-cube"></i> 3D Visning af Palle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="info3D" class="mb-3"></div>
                <div id="canvas3DContainer" style="width: 100%; height: 600px; background: #f0f0f0;">
                </div>
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Hold venstre musknap og træk for at rotere | Scroll for zoom | Hold højre musknap for at panorere
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Three.js CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/controls/OrbitControls.js"></script>
    <script>
        const API_BASE = window.location.origin;
        let selectedElements = [];

        // Load elementer til valg
        async function loadElementSelect() {
            try {
                const response = await fetch(`${API_BASE}/api/elementer`);
                const elementer = await response.json();

                const container = document.getElementById('elementSelect');

                if (elementer.length === 0) {
                    container.innerHTML = '<p class="text-muted">Ingen elementer fundet. <a href="/Home/Elementer">Opret elementer</a></p>';
                    return;
                }

                let html = '';
                elementer.forEach(el => {
                    html += `
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="${el.id}" id="el${el.id}">
                            <label class="form-check-label" for="el${el.id}">
                                <strong>${el.reference || 'Element #' + el.id}</strong><br>
                                <small class="text-muted">${el.hoejde}×${el.bredde}×${el.dybde} mm, ${el.vaegt} kg</small>
                            </label>
                        </div>
                    `;
                });

                container.innerHTML = html;

            } catch (error) {
                document.getElementById('elementSelect').innerHTML = `<p class="text-danger">Fejl: ${error.message}</p>`;
            }
        }

        // Generer pakkeplan
        async function genererPakkeplan() {
            const checkboxes = document.querySelectorAll('#elementSelect input[type="checkbox"]:checked');
            const elementIds = Array.from(checkboxes).map(cb => parseInt(cb.value));

            if (elementIds.length === 0) {
                alert('Vælg mindst ét element!');
                return;
            }

            const loading = document.getElementById('loading');
            const resultat = document.getElementById('resultatContainer');
            const btn = document.getElementById('genererBtn');

            loading.style.display = 'block';
            resultat.innerHTML = '';
            btn.disabled = true;

            try {
                const response = await fetch(`${API_BASE}/api/palleoptimering/generer`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        elementIds: elementIds,
                        ordreReference: document.getElementById('ordreReference').value || null
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.meddelelser ? data.meddelelser.join(', ') : 'Fejl ved generering');
                }

                visResultat(data);

            } catch (error) {
                resultat.innerHTML = `<div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Fejl: ${error.message}</div>`;
            } finally {
                loading.style.display = 'none';
                btn.disabled = false;
            }
        }

        // Load ved page load
        document.addEventListener('DOMContentLoaded', loadElementSelect);

        // 3D Visualization
        let currentPakkeplan = null;
        let scene, camera, renderer, controls;
        let modal3D = null;

        function vis3D(palleIndex) {
            if (!currentPakkeplan) return;

            const palle = currentPakkeplan.paller[palleIndex];
            if (!palle) return;

            // Opdater info
            document.getElementById('info3D').innerHTML = `
                <div class="alert alert-info">
                    <strong>Palle ${palle.palleNummer}:</strong> ${palle.palleBeskrivelse} |
                    ${palle.antalLag} lag | ${palle.samletVaegt.toFixed(2)} kg | ${palle.samletHoejde} mm højde
                </div>
            `;

            // Vis modal
            modal3D = new bootstrap.Modal(document.getElementById('modal3D'));
            modal3D.show();

            // Render 3D scene efter modal er vist
            setTimeout(() => render3DPalle(palle), 300);
        }

        function render3DPalle(palle) {
            const container = document.getElementById('canvas3DContainer');
            container.innerHTML = '';

            // Scene setup
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0xf0f0f0);

            // Camera
            const width = container.clientWidth;
            const height = container.clientHeight;
            camera = new THREE.PerspectiveCamera(50, width / height, 1, 10000);
            camera.position.set(3000, 2000, 3000);
            camera.lookAt(0, 0, 0);

            // Renderer
            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(width, height);
            container.appendChild(renderer.domElement);

            // Controls
            controls = new THREE.OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;

            // Lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);

            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.5);
            directionalLight.position.set(1000, 2000, 1000);
            scene.add(directionalLight);

            // Grid helper
            const gridHelper = new THREE.GridHelper(5000, 50, 0x888888, 0xcccccc);
            scene.add(gridHelper);

            // Axes helper
            const axesHelper = new THREE.AxesHelper(1000);
            scene.add(axesHelper);

            // Palle base (træpalle)
            const palleGeometry = new THREE.BoxGeometry(palle.laengde, palle.hoejde, palle.bredde);
            const palleMaterial = new THREE.MeshPhongMaterial({
                color: 0x8B4513,  // Brun for træ
                opacity: 0.7,
                transparent: true
            });
            const palleMesh = new THREE.Mesh(palleGeometry, palleMaterial);
            palleMesh.position.y = palle.hoejde / 2;

            // Palle kant (outline)
            const palleEdges = new THREE.EdgesGeometry(palleGeometry);
            const palleLines = new THREE.LineSegments(
                palleEdges,
                new THREE.LineBasicMaterial({ color: 0x000000, linewidth: 2 })
            );
            palleLines.position.copy(palleMesh.position);
            scene.add(palleMesh);
            scene.add(palleLines);

            // Tegn elementer
            const colors = [0x3498db, 0xe74c3c, 0x2ecc71, 0xf39c12, 0x9b59b6, 0x1abc9c, 0xe67e22, 0x34495e];
            let colorIndex = 0;

            palle.elementer.forEach((el, idx) => {
                // Element dimensioner (brug roteret dimensioner hvis roteret)
                const width = el.erRoteret ? el.dybde : el.bredde;
                const depth = el.erRoteret ? el.bredde : el.dybde;
                const height = el.hoejde;

                const elementGeometry = new THREE.BoxGeometry(width, height, depth);
                const elementMaterial = new THREE.MeshPhongMaterial({
                    color: colors[colorIndex % colors.length],
                    opacity: 0.8,
                    transparent: true
                });
                const elementMesh = new THREE.Mesh(elementGeometry, elementMaterial);

                // Position: X og Z er baseret på plads/position, Y er baseret på lag
                // Dette er en simpel approximation - i virkeligheden skal du bruge faktiske koordinater fra algoritmen
                const lagHoejde = palle.hoejde + ((el.lag - 1) * 1200); // Antagelse: gennemsnitlig element højde
                elementMesh.position.x = (el.x || (el.plads * 300 - 600)); // Simpel placering baseret på plads
                elementMesh.position.y = lagHoejde + height / 2;
                elementMesh.position.z = (el.z || 0);

                // Element kant
                const elementEdges = new THREE.EdgesGeometry(elementGeometry);
                const elementLines = new THREE.LineSegments(
                    elementEdges,
                    new THREE.LineBasicMaterial({ color: 0x000000, linewidth: 1 })
                );
                elementLines.position.copy(elementMesh.position);

                scene.add(elementMesh);
                scene.add(elementLines);

                // Label (optional - kan være tungere for performance)
                if (idx < 20) {  // Kun vis labels for første 20 elementer
                    const canvas = document.createElement('canvas');
                    const context = canvas.getContext('2d');
                    canvas.width = 256;
                    canvas.height = 64;
                    context.fillStyle = '#ffffff';
                    context.fillRect(0, 0, canvas.width, canvas.height);
                    context.fillStyle = '#000000';
                    context.font = 'Bold 24px Arial';
                    context.fillText(el.reference || 'El-' + el.elementId, 10, 40);

                    const texture = new THREE.CanvasTexture(canvas);
                    const labelMaterial = new THREE.SpriteMaterial({ map: texture });
                    const label = new THREE.Sprite(labelMaterial);
                    label.position.copy(elementMesh.position);
                    label.position.y += height / 2 + 100;
                    label.scale.set(400, 100, 1);
                    scene.add(label);
                }

                colorIndex++;
            });

            // Animation loop
            function animate() {
                if (modal3D && modal3D._isShown) {
                    requestAnimationFrame(animate);
                    controls.update();
                    renderer.render(scene, camera);
                }
            }
            animate();

            // Handle resize
            window.addEventListener('resize', () => {
                if (modal3D && modal3D._isShown) {
                    const w = container.clientWidth;
                    const h = container.clientHeight;
                    camera.aspect = w / h;
                    camera.updateProjectionMatrix();
                    renderer.setSize(w, h);
                }
            });
        }

        // Gem pakkeplan data når resultat vises
        function visResultat(data) {
            currentPakkeplan = data;  // Gem data til 3D visning
            const container = document.getElementById('resultatContainer');

            let html = `
                <div class="alert alert-success">
                    <h5><i class="fas fa-check-circle"></i> Pakkeplan Genereret!</h5>
                    <p class="mb-0">
                        <strong>${data.antalPaller}</strong> paller bruges til <strong>${data.antalElementer}</strong> elementer
                    </p>
                </div>
            `;

            data.paller.forEach((palle, index) => {
                const totalVaegt = palle.samletVaegt.toFixed(2);
                const fillPercent = Math.min((palle.samletHoejde / 2800) * 100, 100);

                html += `
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-0">
                                        <i class="fas fa-pallet"></i> Palle ${palle.palleNummer}: ${palle.palleBeskrivelse}
                                    </h5>
                                </div>
                                <div class="col-md-4 text-end">
                                    <button class="btn btn-sm btn-light me-2" onclick="vis3D(${index})">
                                        <i class="fas fa-cube"></i> 3D Visning
                                    </button>
                                    <small>${palle.antalLag} lag | ${totalVaegt} kg | ${palle.samletHoejde} mm</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar ${fillPercent > 90 ? 'bg-danger' : fillPercent > 70 ? 'bg-warning' : 'bg-success'}"
                                         style="width: ${fillPercent}%">
                                        ${fillPercent.toFixed(1)}% fyldt
                                    </div>
                                </div>
                            </div>
                `;

                // Gruppe elementer efter lag
                const lagMap = {};
                palle.elementer.forEach(el => {
                    if (!lagMap[el.lag]) lagMap[el.lag] = [];
                    lagMap[el.lag].push(el);
                });

                Object.keys(lagMap).sort((a, b) => a - b).forEach(lag => {
                    html += `
                        <div class="mb-3">
                            <h6 class="text-primary">
                                <i class="fas fa-layer-group"></i> Lag ${lag}
                            </h6>
                            <div class="row g-2">
                    `;

                    lagMap[lag].sort((a, b) => a.plads - b.plads).forEach(el => {
                        html += `
                            <div class="col-md-4">
                                <div class="element-box">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>${el.reference || 'Element #' + el.elementId}</strong>
                                            ${el.serie ? `<br><small class="text-primary"><i class="fas fa-tag"></i> ${el.serie}</small>` : ''}
                                            <br>
                                            <small class="text-muted">
                                                H: ${el.hoejde} mm × <strong>B: ${el.bredde} mm</strong>
                                                <br>
                                                ${el.vaegt} kg | Plads ${el.plads}
                                            </small>
                                        </div>
                                        <div>
                                            ${el.erRoteret ? '<span class="badge bg-info"><i class="fas fa-sync"></i> Roteret</span>' : ''}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    });

                    html += `
                            </div>
                        </div>
                    `;
                });

                html += `
                        </div>
                    </div>
                `;
            });

            container.innerHTML = html;
        }
    </script>
}
