@{
    ViewData["Title"] = "Elementer";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white"><i class="fas fa-door-open"></i> Elementer Management</h1>
        <p class="text-white">Opret og administrer elementer til pallepakning</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Opret Nyt Element</h4>
            </div>
            <div class="card-body">
                <form id="elementForm">
                    <div class="mb-3">
                        <label class="form-label">Reference</label>
                        <input type="text" class="form-control" id="reference" placeholder="Pos-001">
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mærke</label>
                            <input type="text" class="form-control" id="maerke" placeholder="A">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Serie</label>
                            <input type="text" class="form-control" id="serie" placeholder="Serie1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Højde (mm) *</label>
                            <input type="number" class="form-control" id="hoejde" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Bredde (mm) *</label>
                            <input type="number" class="form-control" id="bredde" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Dybde (mm) *</label>
                            <input type="number" class="form-control" id="dybde" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vægt (kg) *</label>
                        <input type="number" step="0.1" class="form-control" id="vaegt" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Rotationsregel</label>
                        <select class="form-select" id="rotationsRegel">
                            <option value="Nej">Nej - Må ikke roteres</option>
                            <option value="Ja" selected>Ja - Kan roteres</option>
                            <option value="Skal">Skal - Skal roteres</option>
                        </select>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="erSpecialelement">
                        <label class="form-check-label" for="erSpecialelement">
                            Specialelement
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="erGeometrielement">
                        <label class="form-check-label" for="erGeometrielement">
                            Geometri element (ingen stabling ovenpå)
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-plus"></i> Opret Element
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-list"></i> Alle Elementer</h4>
                <button class="btn btn-sm btn-outline-light" onclick="loadElementer()">
                    <i class="fas fa-sync"></i> Opdater
                </button>
            </div>
            <div class="card-body">
                <div id="loading" class="loading">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Indlæser elementer...</p>
                </div>
                <div id="elementerContainer"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = window.location.origin;

        // Opret element
        document.getElementById('elementForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const element = {
                reference: document.getElementById('reference').value || null,
                maerke: document.getElementById('maerke').value || null,
                serie: document.getElementById('serie').value || null,
                hoejde: parseInt(document.getElementById('hoejde').value),
                bredde: parseInt(document.getElementById('bredde').value),
                dybde: parseInt(document.getElementById('dybde').value),
                vaegt: parseFloat(document.getElementById('vaegt').value),
                rotationsRegel: document.getElementById('rotationsRegel').value,
                erSpecialelement: document.getElementById('erSpecialelement').checked,
                erGeometrielement: document.getElementById('erGeometrielement').checked
            };

            try {
                const response = await fetch(`${API_BASE}/api/elementer`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(element)
                });

                if (response.ok) {
                    alert('Element oprettet!');
                    document.getElementById('elementForm').reset();
                    loadElementer();
                } else {
                    alert('Fejl ved oprettelse');
                }
            } catch (error) {
                alert('Fejl: ' + error.message);
            }
        });

        // Hent alle elementer
        async function loadElementer() {
            const loading = document.getElementById('loading');
            const container = document.getElementById('elementerContainer');

            loading.style.display = 'block';

            try {
                const response = await fetch(`${API_BASE}/api/elementer`);
                const elementer = await response.json();

                if (elementer.length === 0) {
                    container.innerHTML = '<div class="alert alert-info">Ingen elementer oprettet endnu</div>';
                    return;
                }

                let html = '';
                elementer.forEach(el => {
                    html += `
                        <div class="element-box">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h6 class="mb-1">
                                        <i class="fas fa-cube text-success"></i>
                                        ${el.reference || 'Element #' + el.id}
                                    </h6>
                                    <small class="text-muted">
                                        ${el.hoejde}×${el.bredde}×${el.dybde} mm | ${el.vaegt} kg
                                        ${el.maerke ? ' | Mærke: ' + el.maerke : ''}
                                        ${el.serie ? ' | Serie: ' + el.serie : ''}
                                    </small>
                                    ${el.erSpecialelement ? '<span class="badge bg-warning ms-2">Special</span>' : ''}
                                    ${el.erGeometrielement ? '<span class="badge bg-danger ms-2">Geometri</span>' : ''}
                                </div>
                                <div class="col-md-4 text-end">
                                    <small class="text-muted">${el.rotationsRegel}</small>
                                </div>
                            </div>
                        </div>
                    `;
                });

                container.innerHTML = html;

            } catch (error) {
                container.innerHTML = `<div class="alert alert-danger">Fejl: ${error.message}</div>`;
            } finally {
                loading.style.display = 'none';
            }
        }

        // Load elementer når siden er klar
        document.addEventListener('DOMContentLoaded', loadElementer);
    </script>
}
